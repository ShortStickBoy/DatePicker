<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/picker_toolbar_height"
    android:background="@color/toolbar_bg"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/action_bar_btn_selector"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/picker_cancel"
        android:textColor="@color/action_bar_cancel"
        android:textSize="17sp" />

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/action_bar_line" />

    <TextView
        android:id="@+id/tv_ensure"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/action_bar_btn_selector"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/picker_sure"
        android:textColor="@color/action_bar_ensure"
        android:textSize="17sp" />

</LinearLayout>